<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DHM.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             x:Class="DHM.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>


  <StackPanel>

    <TextBox Text="{Binding debugText}"></TextBox>

    <Button Command="{Binding parseCommand}" HorizontalAlignment="Center">Parse Json</Button>
    <Button Command="{Binding jsonExportCommand}" HorizontalAlignment="Center">Export Json</Button>
    <Button Command="{Binding csvExportCommand}" HorizontalAlignment="Center">Export CSV</Button>

    
    
    
    
    
    <TextBox Text="{Binding jsonIndexInput}"></TextBox>
    <Button Command="{Binding jsonIndexChange}">Lookup</Button>
    <Button Command="{Binding lookupFilterCmd}">Filter</Button>
    
    <TextBlock>Factoid Parser</TextBlock>
    
    <TextBlock Text="{Binding parseMessage}"></TextBlock>

    <ComboBox ItemsSource="{Binding publicQuaryEntries}" SelectedItem="{Binding cboSelect}" SelectedIndex="{Binding cboSelectedItem}" SelectedValue="{Binding jsonObjectIndex}"></ComboBox>
    
    <Button Command="{Binding nextEntry}" IsEnabled="{Binding uiEnabled}">Next Entry</Button>
    <Button Command="{Binding previousEntry}" IsEnabled="{Binding uiEnabled}" >Previous Entry</Button>

    
    <TextBlock Text="{Binding displayText}" Foreground="Green"></TextBlock>
    <TextBlock Text="{Binding objectName}" TextWrapping="WrapWithOverflow"></TextBlock>
    <TextBlock Text="{Binding createdBy}"></TextBlock>
    <TextBlock Text="{Binding createdWhen}"></TextBlock>
    <TextBlock Text="{Binding modifiedBy}"></TextBlock>
    <TextBlock Text="{Binding modifiedWhen}"></TextBlock>
    <!--    <TextBlock Text="{Binding jsonObjectIndex}"></TextBlock> -->

    <TextBlock Text="{Binding statementCount}" Foreground="Green"></TextBlock>
    <TextBlock Text="{Binding statementObjectType}"></TextBlock>



    <TextBlock Text="{Binding statementID}"></TextBlock>
    <TextBlock Text="{Binding statementName}"></TextBlock>
    <TextBlock Text="{Binding statementStartDate}"></TextBlock>
    <TextBlock Text="{Binding statementEndDate}"></TextBlock>
    <TextBlock Text="{Binding statementNotes}"></TextBlock>
    <TextBlock Text="{Binding statementInternalNotes}"></TextBlock>
    <TextBlock Text="{Binding statementHeadStatement}"></TextBlock>

    <Button Command="{Binding nextStatement}">Next Statement</Button>
    <Button Command="{Binding previousStatement}">Previous Statement</Button>

    

    <DataGrid
      Height="300"
      ItemsSource="{Binding Items} "
      AutoGenerateColumns="True"
      BorderThickness="1"
      BorderBrush="White"
      CanUserReorderColumns="True"
      CanUserResizeColumns="True"
      Name="fDataGrid"
      >
      
    </DataGrid>
    


    <DataGrid Height="600"
              ItemsSource="{Binding factoids}"
              GridLinesVisibility="All"
              BorderThickness="1"
              BorderBrush="White"
              CanUserReorderColumns="True"
              CanUserResizeColumns="True"
              x:Name="factoidDataGrid"
              
              >
      
      
      <DataGrid.Columns>
        <DataGridTextColumn Header="ID" Binding="{Binding id}" />
        <DataGridTextColumn Header="Name" Binding="{Binding name}"/>

        

        <!--        
                <DataGridTextColumn Header="Source ID" Binding="{Binding source.id}" />
