        <DataGridTextColumn Header="Reviewed By" Binding="{Binding review.reviewed_by}" />
        <DataGridTextColumn Header="Review Notes" Binding="{Binding review.reviewed_notes}" />
        <DataGridTextColumn Header="Problem Flagged" Binding="{Binding review.problem_flagged}" />
        <DataGridTextColumn Header="Created By" Binding="{Binding created_by}" />
        <DataGridTextColumn Header="Created When" Binding="{Binding created_when}" />
        <DataGridTextColumn Header="Modified By" Binding="{Binding modified_by}" />
        <DataGridTextColumn Header="Modified When" Binding="{Binding modified_when}" />        
        
        
        
        <DataGridTextColumn Header="Source Text" Binding="{Binding source.text}" Width="1*" />
        
        
          <DataGridTextColumn Header="Source Pages Start" Binding="{Binding source.pages_start}" />
        <DataGridTextColumn Header="Source Pages End" Binding="{Binding source.pages_end}" />
        <DataGridTextColumn Header="Source Folio" Binding="{Binding source.folio}" />      
        
        
        -->



   
        
        
        <DataGridTextColumn Header="Statement[0] Object Type" Binding="{Binding has_statements[0].__object_type__}" />
        <DataGridTextColumn Header="Statement[0] Date Written" Binding="{Binding has_statements[0].start_date_written}" />
        <DataGridTextColumn Header="Statement[0] Ort" Binding="{Binding has_statements[0].Ort_der_Handlung[0].label}" />
        <DataGridTextColumn Header="Statement[0] Person" Binding="{Binding has_statements[0].Handlung_ausgefÃ¼hrt_von[0].label}" />
        <DataGridTextColumn Header="Statement[0] Certainty" Binding="{Binding has_statements[0].certainty.certainty}" />

        <DataGridTextColumn Header="Gender" Binding="{Binding has_statements[0].gender}" />
        
        <DataGridTextColumn Header="Forename" Binding="{Binding has_statements[0].forename}" />
        <DataGridTextColumn Header="Surname" Binding="{Binding has_statements[0].surname}" />
        <DataGridTextColumn Header="Role Name" Binding="{Binding has_statements[0].role_name}" />
        <DataGridTextColumn Header="Add Name" Binding="{Binding has_statements[0].add_name}" />





